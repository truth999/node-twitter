extends ../layouts/default

block content
  .container.analytics-container
    h1 Analytics Dashboard
    p.total-visits Total visits:
      span #{count}
    table.table.table-bordered
      thead
        tr
          th User
          th URL
          th Date/Time
      tbody
        each analytic in analytics
          tr
            - if (analytic.user != null && analytic.url != null)
              - var name = analytic.user.name ? analytic.user.name : analytic.user.username
              td #{name}
              td #{analytic.url}
              td #{analytic.createdAt}
  - if (pages > 1)
    .pagination-container
      ul.pagination
        != createPagination(pages, page)
