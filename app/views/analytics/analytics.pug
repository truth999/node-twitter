extends ../layouts/default

block content
  .container.analytics-container
    h1 Analytics Dashboard
    .analytic-numbers
      ul
        li
          span.analytic-title Total visits: 
          span.analytic-value #{pageViews}
        li
          span.analytic-title Total tweets: 
          span.analytic-value #{tweetCount}
    table.table.table-bordered
      thead
        tr
          th User
          th URL
          th Date/Time
      tbody
        each analytic in analytics
          tr
            - if (analytic.user != null && analytic.url != null)
              - var name = analytic.user.name ? analytic.user.name : analytic.user.username
              td #{name}
              td #{analytic.url}
              td #{analytic.createdAt}
  - if (pages > 1)
    .pagination-container
      ul.pagination
        != createPagination(pages, page)
