extends ../layouts/default

block content
  .well
    h3 #{title}
    if (followers.length !== 0)
      each follower in followers
          .well
            a.btn(href="/users/" + user._id)
              img(src=user.github.avatar_url, class='tweet-image follower-image')
              span #{user.username}
    else
      h4 Seems like there is no one following you.